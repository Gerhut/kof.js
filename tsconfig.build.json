{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "lib": ["DOM"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "rootDir": "lib",
    "target": "ES2017"
  },
  "include": ["lib"]
}
