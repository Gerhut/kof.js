{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "lib": ["DOM"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "target": "ES2017"
  },
  "include": ["lib", "test", "package.json"]
}
